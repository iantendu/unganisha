<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FarmerProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:paddingTop="8dp"/>/>
            <TextView
                android:id="@+id/farmer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collins Kiptoo"
                android:textSize="24sp"
                android:paddingBottom="8sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="20sp"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/farmer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="collinskiptoo@gmail.com"
                android:textSize="24sp"
                android:paddingBottom="8sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="20sp"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/farmer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+254710949598"
                android:textSize="24sp"
                android:paddingBottom="8sp"/>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region"
                android:textSize="20sp"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/farmer_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Central"
                android:textSize="24sp"
                android:paddingBottom="8sp"/>
            <Button
                android:layout_marginTop="24dp"
                android:id="@+id/farmer_update_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Info" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>